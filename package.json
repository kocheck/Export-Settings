{
  "name": "Lazy-Export",
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev": "BUILD_TYPE=ui vite build --watch",
    "build": "npm run build:ui && npm run build:code",
    "build:ui": "BUILD_TYPE=ui vite build",
    "build:code": "BUILD_TYPE=code vite build",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.svelte",
    "lint:fix": "eslint . --ext .ts,.svelte --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "release": "standard-version",
    "docs:dev": "vitepress dev docs",
    "docs:build": "npm run docs:api && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:api": "typedoc"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.82.0",
    "@playwright/test": "^1.42.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@testing-library/svelte": "^4.0.5",
    "@tsconfig/svelte": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.0.0",
    "eslint-plugin-svelte": "^2.0.0",
    "figma-plugin-ds-svelte": "^1.0.4",
    "form-data": "^4.0.0",
    "husky": "^8.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.0.0",
    "node-fetch": "^3.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "standard-version": "^9.0.0",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "svelte-preprocess": "^6.0.3",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.0",
    "typedoc-plugin-markdown": "^3.17.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-singlefile": "^0.13.5",
    "vitepress": "^1.0.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "i18next": "^23.16.8",
    "i18next-browser-languagedetector": "^8.0.0"
  }
}
